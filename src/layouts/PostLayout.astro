---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>

		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,600,1,0" />
		<script src="/typewriter.js" defer></script>
		<script src="/extras.js" defer></script>
	
	</head>
	<body>
		<Header selected={1} />
		
		
		<main class="mx-auto px-5 md:px-10 max-w-5xl text-white py-36 article blog">
			<h1 class="mx-auto max-w-5xl">{frontmatter.title}</h1> 
			<div class="flex items-center mb-8">
				<span class="material-symbols-outlined pr-2">calendar_month</span> 
				Published on {frontmatter.pubDate.slice(0,10)}
			</div>

			<slot />
		</main>

		<Footer />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap');
	
	html {
		font-family: 'JetBrains Mono', monospace;
		min-height: 100vh;

		/* This background was made in Figma */
		background: 
			radial-gradient(41.41% 14.67% at 111.54% 68.77%, rgba(219, 0, 255, 0.1) 0%, rgba(219, 0, 255, 0) 100%),
			radial-gradient(49.25% 17.81% at -14.15% 100.72%, rgba(0, 71, 255, 0.1) 0%, rgba(36, 0, 255, 0.028) 40.98%),
			radial-gradient(62.68% 22.29% at -37.19% 56.96%, rgba(82, 255, 0, 0.1) 0%, rgba(36, 255, 0, 0) 100%), 
			radial-gradient(46.95% 18.21% at -4.97% 1.23%, rgba(0, 26, 255, 0.1) 0%, rgba(0, 26, 255, 0) 100%), 
			radial-gradient(49.48% 17.59% at 120.31% 25.24%, rgba(204, 0, 255, 0.1) 0%, rgba(204, 0, 255, 0) 100%), 
			linear-gradient(98.84deg, rgba(0, 26, 255, 0.1) 0%, rgba(143, 0, 255, 0.1) 17.71%, rgba(14, 23, 255, 0.1) 35.42%, 
			rgba(143, 0, 255, 0.1) 56.13%, rgba(27, 21, 255, 0.1) 78.12%, rgba(134, 2, 255, 0.1) 100%), black;

		background-repeat: no-repeat;
		background-size: 100vw 500vh;

	}

	.s {
		transition: opacity 0.8s ease-in, transform 0.8s ease-out;
	}

	.s-on {
		opacity: 1;
		transform: translateY(0px);
	}

	.s-off {
		opacity: 0;
		transform: translateY(40px);
	}

	.highlight {
		background: linear-gradient(120deg, #00b2ff 0%, #b95dff 100%);
		@apply bg-clip-text text-transparent animate-glow;
	}

	.article p {
		@apply py-2 lg:text-lg
	}

	.article a {
		background: linear-gradient(120deg, #00b2ff 0%, #b95dff 100%);
		@apply bg-clip-text text-transparent relative;
	}

	.article a:hover {
		@apply bg-clip-content text-white relative;
		background: linear-gradient(120deg, #00b2ff 0%, #b95dff 100%);
	}

	.article a::after {
		content: "";
		position: absolute;
		bottom: 2px;
		left: 0;
		height: 1px;
		width: 100%;
		background: #00b2ff;
		background: linear-gradient(120deg, #00b2ff 0%, #b95dff 100%);
	}

	.article h1 {
		background: linear-gradient(120deg, #00b2ff 100%, #8f00ff 0%);
		@apply bg-clip-text text-transparent text-4xl lg:text-5xl font-extrabold py-2;
	}
	
	.blog pre {
		@apply p-8 rounded-md my-5
	}

	.blog hr {
		@apply my-5;
		border-top: 2px solid;
		border-image-slice: 1;
		border-image-source: linear-gradient(0deg, #00b3ff73 0%, #9000ff65 100%);
	}

	.article h2 {
		background: linear-gradient(120deg, #00b2ff 0%, #8f00ff 100%);
		@apply bg-clip-text text-transparent text-3xl lg:text-4xl font-extrabold py-2;
	}

	.article h3 {
		@apply text-xl lg:text-2xl font-extrabold py-2;
	}


	.blog img, .blog video {
		@apply mx-auto py-5
	}

	.blog ul {
		@apply my-5 ml-5 lg:text-lg list-inside list-disc
	}

	.blog p > code {
		@apply p-2 bg-slate-900/50 text-orange-500 rounded-sm whitespace-nowrap
	}

	.blog blockquote {
		@apply block px-6 border-l-[#00b3ff] border-l-4 py-4 my-4 bg-slate-500/20;
	}

</style>
